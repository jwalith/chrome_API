{
  "manifest_version": 3,
  "name": "LinkedIn Job Extractor",
  "version": "1.0.0",
  "description": "Extract job details from LinkedIn job pages",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  
  "host_permissions": [
    "https://*.linkedin.com/*"
  ],
  
  "externally_connectable": {
    "matches": ["http://127.0.0.1:5500/*"]
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Job Analysis"
  },
  
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*"],
      "js": ["content.js"]
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  }
}
